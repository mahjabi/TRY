@model TRY.Models.Donate

@{
    ViewData["Title"] = "Create";
}

<h1>Hello</h1>

<h4>Thanks for donating!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrnDate" class="control-label"></label>
                <input asp-for="TrnDate" class="form-control" />
                <span asp-validation-for="TrnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrnId" class="control-label"></label>
                <input asp-for="TrnId" class="form-control" />
                <span asp-validation-for="TrnId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation_Reason" class="control-label"></label>
                <input asp-for="Donation_Reason" class="form-control" />
                <span asp-validation-for="Donation_Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation_Medium" class="control-label"></label>
                <input asp-for="Donation_Medium" class="form-control" />
                <span asp-validation-for="Donation_Medium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Previous</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
